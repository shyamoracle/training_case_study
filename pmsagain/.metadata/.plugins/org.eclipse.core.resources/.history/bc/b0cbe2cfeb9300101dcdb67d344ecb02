select_all_products=select product_id as ID, product_name as NAME, product_desc as DESCRIPTION, price as PRICE, product_released_on as RELEASE_DATE from products
select_product=select product_id as ID, product_name as NAME, product_desc as DESCRIPTION, price as PRICE, product_released_on as RELEASE_DATE from products where product_id=?
add_product=insert into products(product_id, product_name, product_desc, price, product_released_on) values(?,?,?,?,?)
delete_product=delete from products where product_id=?
update_product=update products set product_name=?, product_desc=?, price=?, product_released_on=? where product_id=?